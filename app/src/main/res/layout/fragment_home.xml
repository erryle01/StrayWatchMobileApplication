<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/linear_background_color"
    tools:context=".HomeFragments">
    <!-- Main content area -->
    <!-- Add your main content here -->

    <!-- Bottom Navigation View -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
           >

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:layout_gravity="center"
                android:gravity="center"
              >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/propcimg"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:src="@drawable/propic1"
                        app:shapeAppearanceOverlay="@style/propicround" />

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="205dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:text="@string/userName"
                        android:textAlignment="center"
                        android:textColor="#040404"
                        android:textSize="20sp" />




                    <TextView
                        android:id="@+id/petcount"
                        android:layout_width="150dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center"
                        android:background="@drawable/petcount"
                        android:fontFamily="sans-serif-black"
                        android:gravity="center"
                        android:text="@string/petcount"
                        android:textAlignment="center"
                        android:textColor="#040404"
                        android:backgroundTint="@color/teal_200"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"

                android:backgroundTint="#FF03DAC5"
                android:orientation="vertical">

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-220dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"

                    app:cardCornerRadius="50dp"
                    >

                    <ImageView
                        android:id="@+id/eventimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/pic"
                        android:contentDescription="TODO"
                        tools:ignore="ContentDescription,HardcodedText" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="00dp"
                android:background="@drawable/pow_background">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="40dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonProfiling"
                        android:layout_width="152dp"
                        android:layout_height="146dp"
                        android:layout_marginTop="44dp"
                        android:background="@drawable/button_profiling"
                        android:drawableTop="@drawable/paw"
                        android:text="@string/pet_profiling"
                        app:backgroundTint="@color/dark_green"
                        app:layout_constraintEnd_toStartOf="@+id/buttonVaccine"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonVaccine"
                        android:layout_width="152dp"
                        android:layout_height="146dp"
                        android:layout_marginTop="44dp"
                        android:background="@drawable/button_profiling"
                        android:drawableTop="@drawable/schedule"
                        android:text="@string/vaccine"
                        app:backgroundTint="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.822"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSighting"
                        android:layout_width="152dp"
                        android:layout_height="146dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_profiling"
                        android:drawableTop="@drawable/camera"
                        android:text="@string/sighting"
                        app:backgroundTint="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.119"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonProfiling" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonGT"
                        android:layout_width="152dp"
                        android:layout_height="146dp"
                        android:layout_marginTop="44dp"
                        android:background="@drawable/button_profiling"
                        android:drawableTop="@drawable/gt"
                        android:text="@string/guidtip"
                        app:backgroundTint="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.822"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonVaccine" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonNews"
                        android:layout_width="152dp"
                        android:layout_height="146dp"
                        android:layout_marginTop="44dp"
                        android:background="@drawable/button_profiling"
                        android:drawableTop="@drawable/news"
                        android:text="@string/news"
                        app:backgroundTint="@color/dark_green"
                        app:layout_constraintEnd_toStartOf="@+id/buttonFeedback"
                        app:layout_constraintHorizontal_bias="0.436"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonSighting" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonFeedback"
                        android:layout_width="152dp"
                        android:layout_height="146dp"
                        android:layout_marginTop="44dp"
                        android:background="@drawable/button_profiling"
                        android:drawableTop="@drawable/feedback"
                        android:text="@string/feedback"
                        app:backgroundTint="@color/dark_green"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.822"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/buttonGT" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>